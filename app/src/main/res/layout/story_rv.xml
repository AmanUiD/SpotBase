<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.devlomi.circularstatusview.CircularStatusView
        android:id="@+id/storyImageBorder"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:portion_color="@color/color_blue"
        app:portion_spacing="3dp"
        app:portion_width="2.5dp"
        app:portions_count="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/storyImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/picc"
        app:layout_constraintBottom_toBottomOf="@+id/storyImageBorder"
        app:layout_constraintEnd_toEndOf="@+id/storyImageBorder"
        app:layout_constraintStart_toStartOf="@+id/storyImageBorder"
        app:layout_constraintTop_toTopOf="@+id/storyImageBorder"
        app:layout_constraintVertical_bias="0.583" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:text="Ankita"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:maxLength="10"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/storyImageBorder"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@+id/storyImageBorder"
        app:layout_constraintTop_toBottomOf="@+id/storyImageBorder" />

</androidx.constraintlayout.widget.ConstraintLayout>